<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353336"
    tools:context=".New_event_registor">


    <LinearLayout
        android:id="@+id/new_host_img_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="203dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新增活動"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="#353336"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:id="@+id/eventname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/new_host_img_layout"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="31dp"
        android:hint="活動名稱"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/eventdate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eventname"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="活動時間"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/eventplace"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eventdate"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="活動地點"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/hostname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/eventplace"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="主辦單位"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/total"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/hostname"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="報名人數上限"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <Button
        android:id="@+id/add_new_event"
        style="@android:style/Widget.Button"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/total"
        android:background="#00FFFFFF"
        android:text="新增活動"
        android:textColor="#7ED7F7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>