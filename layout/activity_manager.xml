<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353336"
    tools:context=".Manager">

    <LinearLayout
        android:id="@+id/new_host_img_layout"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="感染者ㄉ資料"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="#353336"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:id="@+id/infected_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/new_host_img_layout"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="31dp"
        android:hint="感染者姓名"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/infected_birthdate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/infected_name"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="感染者生日"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/infected_phone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/infected_birthdate"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="感染者手機號碼"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/infected_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/infected_phone"
        android:layout_marginTop="02dp"
        android:layout_marginEnd="31dp"
        android:hint="感染者身分證字號"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#7E7E7E"
        android:textSize="24dp" />

    <Button
        android:id="@+id/add_new_infected"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/infected_id"
        android:background="#00FFFFFF"
        android:text="輸入感染者"
        android:textColor="#7ED7F7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>